<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight"> <!-- Màu ripple (thường là màu nhấn mặc định của theme) -->

    <!-- Background shape của bạn -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/> <!-- Bo góc -->
            <solid android:color="#ffffff"/> <!-- Màu nền xanh lá -->
            <stroke android:width="1dp" android:color="#efefef"/>
            <padding android:left="20dp" android:right="20dp"/> <!-- Padding -->
        </shape>
    </item>
</ripple>